generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "postgres"
  url          = env("DATABASE_URL")
  directUrl    = env("DIRECT_URL")
  relationMode = "foreignKeys"
}

model User {
  id     Int      @id @default(autoincrement())
  name   String
  email  String   @unique
  cart   Cart[]
  stores Stores[]
}

model Cart {
  cartid    Int    @id @default(autoincrement())
  title     String
  price     Int
  useremail String
  user      User   @relation(fields: [useremail], references: [email])
}

model Category {
  id          Int           @id @default(autoincrement())
  title       String
  subcategory SubCategory[]
}

model Products {
  id      Int      @id @default(autoincrement())
  name    String
  images  String[]
  price   Int
  storeId Int
  store   Stores   @relation(fields: [storeId], references: [id])
}

model Stores {
  id         Int        @id @default(autoincrement())
  name       String     @unique
  coverImage String
  products   Products[]
  useremail  String
  user       User       @relation(fields: [useremail], references: [email])
}

model SubCategory {
  id       Int      @id @default(autoincrement())
  title    String
  CatId    Int
  category Category @relation(fields: [CatId], references: [id])
}
